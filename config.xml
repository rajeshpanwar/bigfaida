<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.manusis.bigfaida"
        versionCode="3"
        version   = "1.0.2">
    <name>BigFaida</name>
    <description>
        Ecommerce Platform
    </description>
    <author email="vijay.barnwal@manusis.com" href="http://cordova.io">
        Vijay Barnwal
    </author>
    <content src="index.html" />
    <access origin="*"/>
    <gap:platform name="android" />
    <gap:platform name="ios" />
    <preference name="permissions" value="none"/>
    <preference name="orientation" value="default"/>
    <preference name="android-windowSoftInputMode" value="adjustResize"/>
    <preference name="fullscreen" value="false"/>
    <preference name="webviewbounce" value="true"/>
    <preference name="android-minSdkVersion" value="7"/>
    <preference name="KeepRunning" value="false"/>
    <preference name="LoadUrlTimeoutValue" value="10000"/>
    <preference name="android-installLocation" value="auto"/>
    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="SplashScreenDelay" value="5000"/>
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#000000"/>
    <preference name="StatusBarStyle" value="lightcontent"/>
    <preference name="DisallowOverscroll" value="true"/>

    <icon src="icon.png" />
    <gap:splash src="splash.png" />
    <gap:plugin name="org.apache.cordova.contacts" version="0.2.9" />
    <!--<gap:plugin name="info.asankan.phonegap.smsplugin" version="0.1.0" />-->
    <gap:plugin name="nl.x-services.plugins.socialsharing" version="4.0.8" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <!--<gap:plugin name="org.apache.cordova.device" />-->
    <!--<feature name="SmsPlugin">
        <param name="android-package" value="org.apache.cordova.plugin.SmsPlugin"/>
    </feature>-->
    <icon src="icons/ios/reader-57-1.png" gap:platform="ios" width="57" height="57" />
    <icon src="icons/ios/reader-72-1.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/ios/reader-114-1.png" gap:platform="ios" width="114" height="114" />
    <icon src="icons/ios/reader-144-1.png" gap:platform="ios" width="144" height="144" />
    <gap:splash src="splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="splash/ios/Default-Landscape_at_2x.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="splash/ios/Default-Portrait_at_2x.png" gap:platform="ios" width="1536" height="2008" />


    <icon src="icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />


</widget>
